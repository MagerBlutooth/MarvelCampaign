<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import campaign.view.node.GridDisplayNode?>
<fx:root type="DialogPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/mainStyle.css" prefWidth="900" prefHeight="900">
    <content>
        <VBox>
            <StackPane fx:id="displayPane"/>
            <TextField fx:id="searchBar"/>
            <GridDisplayNode fx:id="choices"/>
            <padding>
                <Insets top="40.0" bottom="40.0" left="20.0" right="20.0"/>
            </padding>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="okButton" text="OK" buttonData="OK_DONE"/>
        <ButtonType fx:id="cancelButton" text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
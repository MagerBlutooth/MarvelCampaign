<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.StackPane" fx:id="mainPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/editorStyle.css" fx:controller="campaign.controller.editor.LocationEditorNodeController"
         prefWidth="1200" prefHeight="800">
    <HBox>
        <VBox fx:id="contentBox" alignment="CENTER_LEFT" spacing="20.0">
            <HBox fx:id="nameBox" alignment="CENTER" spacing="20.0">
                <Label fx:id="nameLabel" text="Name:" textFill="white"/>
                <TextField fx:id="nameField"/>
            </HBox>
            <VBox fx:id="effectBox" alignment="CENTER" spacing="20.0">
                <Label fx:id="effectLabel" text="Effect:" textFill="white"/>
                <TextArea fx:id="effectField" wrapText="true"/>
            </VBox>
        </VBox>
    </HBox>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import campaign.view.button.ButtonToolBar?>
<fx:root type="campaign.view.pane.PlayerLoadPane" fx:id="loadPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/editorStyle.css" fx:controller="campaign.controller.PlayerLoadPaneController">
    <VBox>
        <ButtonToolBar fx:id="buttonToolBar"/>
        <HBox spacing="20.0">
            <VBox spacing="20.0">
                <Label text="Enter Password:" textFill="white"/>
                <TextArea fx:id="passwordArea" wrapText="true"/>
                <Button text="Load" onAction="#loadFaction" alignment="CENTER"/>
            </VBox>
        </HBox>
    </VBox>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
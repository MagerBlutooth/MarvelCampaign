<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import campaign.view.pane.CampaignStartPane?>
<?import campaign.view.button.ButtonToolBar?>
<?import campaign.view.node.FactionDisplayNode?>
<fx:root type="CampaignStartPane" fx:id="startPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/mainStyle.css" fx:controller="campaign.controller.BaseStartPaneController" prefWidth="1600" prefHeight="800">
    <VBox>
        <ButtonToolBar fx:id="buttonToolBar"/>
    <ScrollPane id="scroll" hbarPolicy="NEVER">
        <VBox>
            <HBox spacing="20.0">
                <FactionDisplayNode fx:id="shieldDisplay" alignment="CENTER_LEFT"/>
                <FactionDisplayNode fx:id="hydraDisplay" alignment="CENTER_RIGHT"/>
            </HBox>
        </VBox>
    </ScrollPane>
    </VBox>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
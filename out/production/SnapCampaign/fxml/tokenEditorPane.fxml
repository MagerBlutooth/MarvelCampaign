<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import campaign.view.node.editor.TokenEditorNode?>
<?import campaign.view.button.ButtonToolBar?>
<?import campaign.view.thing.TokenView?>
<fx:root type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/editorStyle.css" fx:controller="campaign.controller.editor.TokenEditorPaneController"
         prefWidth="1200" prefHeight="800">
    <VBox>
        <ButtonToolBar fx:id="buttonToolBar"/>
        <VBox alignment="CENTER" spacing="50.0">
            <StackPane>
                <HBox spacing="30.0" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <TokenView fx:id="imagePane"/>
                    </VBox>
                    <TokenEditorNode fx:id="tokenEditorNode"/>
                </HBox>
            </StackPane>
        </VBox>
        <Button text="Save" alignment="CENTER" onAction="#saveToken"/>
    </VBox>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
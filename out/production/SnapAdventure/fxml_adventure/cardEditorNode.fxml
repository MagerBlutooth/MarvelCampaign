<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<fx:root type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/editorStyle.css"
         prefWidth="1200" prefHeight="900" fx:controller="adventure.controller.AdvCardEditorNodeController">
    <VBox fx:id="contentBox" alignment="CENTER" spacing="20.0">
        <HBox spacing="50.0" alignment="CENTER">
            <VBox alignment="CENTER_LEFT" spacing="10.0">
                <HBox fx:id="imageBox"/>
                <Label fx:id="nameLabel" text="" textFill="white"/>
            </VBox>
        </HBox>
        <VBox fx:id="effectBox" spacing="20.0">
            <Label fx:id="effectLabel" text="Boss Effect:" textFill="white" alignment="CENTER"/>
            <TextArea fx:id="effectField" wrapText="true" minHeight="200"/>
        </VBox>
    </VBox>

    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>

</fx:root>
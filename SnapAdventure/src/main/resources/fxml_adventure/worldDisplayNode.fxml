<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import adventure.view.node.WorldDisplayNode?>
<?import javafx.scene.control.Label?>
<?import adventure.view.node.BossControlNode?>
<?import adventure.view.node.SectionControlNode?>
<fx:root type="WorldDisplayNode"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" fx:controller="adventure.controller.WorldDisplayNodeController">
    <VBox alignment="CENTER">
        <VBox alignment="CENTER">
            <Label fx:id="worldLabel" alignment="CENTER"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Boss"/>
                <BossControlNode fx:id="bossNode"/>
            </HBox>
            <HBox spacing="20.0" alignment="CENTER">
                <SectionControlNode fx:id="section1Node"/>
                <SectionControlNode fx:id="section2Node"/>
                <SectionControlNode fx:id="section3Node"/>
                <SectionControlNode fx:id="section4Node"/>
            </HBox>
        </VBox>
    </VBox>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
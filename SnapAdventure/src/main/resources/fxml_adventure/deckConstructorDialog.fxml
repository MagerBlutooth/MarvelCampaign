<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import snapMain.view.node.GridDisplayNode?>
<?import snapMain.view.pane.manager.CardManagerPane?>
<fx:root type="DialogPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" prefWidth="900" prefHeight="900"
         fx:controller="adventure.controller.DeckConstructorDialogController">
    <content>
        <VBox alignment="CENTER" spacing="10.0">
            <GridDisplayNode fx:id="deckDisplay"/>
            <CardManagerPane fx:id="cardChoices"/>
            <Button onAction="#copyToCode"/>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="winButton" text="Win" buttonData="YES"/>
        <ButtonType fx:id="loseButton" text="Lose" buttonData="OK_DONE"/>
        <ButtonType fx:id="escapeButton" text="Escape" buttonData="OK_DONE"/>
        <ButtonType fx:id="cancelButton" text="Force Retreat" buttonData="OK_DONE"/>
    </buttonTypes>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
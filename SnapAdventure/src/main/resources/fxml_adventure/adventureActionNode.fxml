<?import adventure.view.node.AdventureActionNode?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="adventure.view.node.AdventureActionNode"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" fx:controller="adventure.controller.AdventureActionNodeController">
  <HBox alignment="CENTER" spacing="20.0">
    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Action Buttons"/>
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Button text="Draft Card" onAction="#draftCard" id="smallButton"/>
                <Button text="Generate Card" onAction="#generateCard" id="smallButton"/>
            </HBox>
            <HBox spacing="10.0">
                <Button text="Search Card" onAction="#searchCard" id="smallButton"/>
                <Button fx:id="randomCard" text="Random Card" onAction="#randomCard" id="smallButton"/>
            </HBox>
        </VBox>
    </VBox>
  </HBox>
</fx:root>
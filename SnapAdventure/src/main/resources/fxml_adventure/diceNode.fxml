      <HBox spacing="10.0" alignment="CENTER">
          <Button fx:id="d10Button" text="d10" onAction="#rolld10" id="smallButton"/>
          <Button fx:id="d12Button" text="d12" onAction="#rolld12" id="smallButton"/>
          <Button fx:id="d20Button" text="d20" onAction="#rolld20" id="smallButton"/>
          <Button fx:id="d100Button" text="d100" onAction="#rolld100" id="smallButton"/>
      </HBox>
        <Label fx:id="dieResult" alignment="CENTER"/>
  </VBox>

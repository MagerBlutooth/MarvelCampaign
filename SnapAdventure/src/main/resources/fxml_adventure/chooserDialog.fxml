<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.layout.*?>
<?import snapMain.view.node.GridDisplayNode?>
<?import javafx.scene.control.ToggleButton?>
<fx:root type="DialogPane" fx:id="dialogPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" prefWidth="600" prefHeight="600"
         fx:controller="adventure.controller.ChooserDialogController">
    <content>
        <VBox>
            <StackPane fx:id="displayPane"/>
            <GridDisplayNode fx:id="choices"/>
            <HBox>
                <ToggleButton fx:id="toTeamButton" text="To Team"/>
                <ToggleButton fx:id="toTempButton" text="To Temp"/>
            </HBox>
            <padding>
                <Insets top="40.0" bottom="40.0" left="20.0" right="20.0"/>
            </padding>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="okButton" text="OK" buttonData="OK_DONE"/>
        <ButtonType fx:id="cancelButton" text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
    <padding>
        <Insets top="40.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
            <VBox alignment="CENTER">
                <BossManager fx:id="bossManager"/>
            </VBox>
    </VBox>
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
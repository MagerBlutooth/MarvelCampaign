<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import campaign.view.button.ButtonToolBar?>
<?import campaign.view.menu.CardFilterMenuButton?>
<?import campaign.view.menu.CardSortMenuButton?>

<?import campaign.view.manager.CardManager?>
<fx:root type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" fx:controller="adventure.controller.manager.AdvCardManagerPaneController"
         prefWidth="1200" prefHeight="800">
    <VBox alignment="CENTER">
        <ButtonToolBar fx:id="buttonToolBar"/>
        <HBox spacing="30.0" alignment="CENTER">
            <VBox alignment="CENTER">
                <HBox spacing="20.0" alignment="CENTER">
                    <CardSortMenuButton text="Sort" fx:id="sortButton"/>
                    <CardFilterMenuButton text="Filter" fx:id="filterButton"/>
                </HBox>
                <CardManager fx:id="cardManager"/>
            </VBox>
        </HBox>
    </VBox>
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>
<?import adventure.view.node.AdvLocationControlNode?>
<?import snapMain.view.pane.FullViewPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import adventure.view.node.EnemyControlNode?>
<?import adventure.view.node.HPDisplayNode?>
<fx:root type="FullViewPane" fx:id="sectionViewPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/editorStyle.css" fx:controller="adventure.controller.SectionViewPaneController"
         prefWidth="1200" prefHeight="800">
    <VBox alignment="CENTER" spacing="40.0">
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="10.0" minWidth="400" maxWidth="400">
                <EnemyControlNode fx:id="enemyView"/>
                <HPDisplayNode fx:id="hpDisplay"/>
                <TextArea fx:id="enemyEffectText" focusTraversable="false" wrapText="true"
                      mouseTransparent="true" id="infoTextArea" minHeight="100" maxWidth="400"/>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" minWidth="400" maxWidth="400">
                <AdvLocationControlNode fx:id="locationView"/>
                <TextArea fx:id="locationEffectText" maxWidth="400" minHeight="100" wrapText="true"
                          mouseTransparent="true" focusTraversable="false" id="infoTextArea"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="40.0">
            <VBox alignment="CENTER" spacing = "20.0">
                <Label text="Stationed Cards"/>
                <StackPane fx:id="stationedDisplayBox"/>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0">
                <Label text="Rewards"/>
                <StackPane fx:id="rewardDisplayBox"/>
            </VBox>
        </HBox>
        <VBox alignment="CENTER" spacing="10.0">
            <Button text="Create Deck" onAction="#createDeck"/>
            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Back" onAction="#goBack"/>
                <Button fx:id="completeButton" text="Complete" onAction="#completeSection"/>
                <Button fx:id="skipButton" text="Skip" onAction="#skipSection"/>
            </HBox>
        </VBox>
    </VBox>
    <padding>
        <Insets top="50.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>
</fx:root>
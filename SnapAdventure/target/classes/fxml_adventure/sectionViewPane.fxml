<?import adventure.view.AdvTooltip?>
<?import adventure.view.node.AdvLocationControlNode?>
<?import adventure.view.pane.SectionViewPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import snapMain.view.button.ButtonToolBar?>
<?import adventure.view.node.EnemyControlNode?>
<?import adventure.view.node.HPDisplayNode?>
<fx:root type="SectionViewPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/editorStyle.css" fx:controller="adventure.controller.SectionViewPaneController"
         prefWidth="1200" prefHeight="800">

    <VBox alignment="CENTER" spacing="40.0">
        <ButtonToolBar fx:id="buttonToolBar"/>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER">
                <EnemyControlNode fx:id="enemyView"/>
                <HPDisplayNode fx:id="hpDisplay"/>
                <Label fx:id="enemyEffectText" alignment="CENTER" maxWidth="800" wrapText="true" id="info"
                       mouseTransparent="true"/>
            </VBox>
            <VBox>
                <AdvLocationControlNode fx:id="sectionView"/>
                <Label fx:id="locationEffectText" alignment="CENTER" maxWidth="800" wrapText="true" id="info"/>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="40.0">
            <VBox alignment="CENTER" spacing ="20.0">
                <Label text="Stationed Cards"/>
             <StackPane fx:id="stationedDisplayBox"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Pickups"/>
                <StackPane fx:id="pickupDisplayBox"/>
            </VBox>
        </HBox>
        <VBox alignment="CENTER" spacing="10.0">
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="completeButton" text="Complete" onAction="#completeSection">
                    <tooltip>
                        <AdvTooltip text="Complete current section. Reveal next section." id="info"/>
                    </tooltip>
                </Button>
                <Button fx:id="skipButton" text="Skip" onAction="#skipSection">
                    <tooltip>
                        <AdvTooltip text="Skip current section and advance to next. If you already skipped a section this world, a random card on your team will be captured." id="info"/>
                    </tooltip>
                </Button>
                <Button text="Change HP" onAction="#changeHP">
                    <tooltip>
                        <AdvTooltip text="Change the enemy's HP." id="info"/>
                    </tooltip>
                </Button>
            </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="stationButton" text="Station" onAction="#stationCard">
                <tooltip>
                    <AdvTooltip text="Station a card from your team here." id="info"/>
                </tooltip>
            </Button>
            <Button fx:id="changeButton" text="Change Location" onAction="#changeLocation">
                <tooltip>
                    <AdvTooltip text="Change the current section's location to a different one." id="info"/>
                </tooltip>
            </Button>
            <Button fx:id="randomizeButton" text="Randomize Location" onAction="#randomize">
                <tooltip>
                    <AdvTooltip text="Randomize the current section's location." id="info"/>
                </tooltip>
            </Button>
        </HBox>
        </VBox>
    </VBox>
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>
</fx:root>
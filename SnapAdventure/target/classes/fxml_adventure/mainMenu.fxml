<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<fx:root fx:id="mainPane" type="adventure.view.pane.AdvMainMenuPane"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" fx:controller="adventure.controller.AdvMainMenuController" prefHeight="600">
    <StackPane>
        <VBox alignment="CENTER" spacing="20.0">
            <Label id="title" text="Snap Adventure"/>
            <Button fx:id="startButton" text="Start Adventure" onAction="#startAdventure"/>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <Button fx:id="configurationButton" text="Adventure Editor" onAction="#configureAdventure"/>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <Button fx:id="exitButton" text="Exit" onAction="#exit"/>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </VBox>
    </StackPane>
</fx:root>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<fx:root type="adventure.view.node.AdventureActionNode"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css_adventure/mainStyle.css" fx:controller="adventure.controller.AdventureActionNodeController">
  <HBox alignment="CENTER" spacing="20.0">
    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Action Buttons"/>
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Button text="Draft Card" onAction="#draftCard"/>
                <Button text="Generate Card" onAction="#generateCard"/>
            </HBox>
            <HBox spacing="10.0">
                <Button text="Generate Boss" onAction="#generateBoss"/>
                <Button text="Search Card" onAction="#searchCard"/>
            </HBox>
        </VBox>
    </VBox>
  </HBox>
</fx:root>
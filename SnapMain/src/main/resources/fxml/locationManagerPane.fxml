<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import snapMain.view.button.ButtonToolBar?>
<?import snapMain.view.manager.LocationManager?>
<?import snapMain.view.pane.manager.LocationManagerPane?>
<fx:root type="snapMain.view.pane.manager.LocationManagerPane"
         xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../css/mainStyle.css" fx:controller="snapMain.controller.grid.LocationManagerPaneController"
         prefWidth="1200" prefHeight="800">
    <VBox alignment="CENTER">
        <ButtonToolBar fx:id="buttonToolBar"/>
        <HBox spacing="30.0" alignment="CENTER">
            <VBox alignment="CENTER">
                <Button text="Add New" onAction="#addNewEntry"/>
                <LocationManager fx:id="locationManager"/>
            </VBox>
        </HBox>
    </VBox>
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="10.0"/>
    </padding>
</fx:root>